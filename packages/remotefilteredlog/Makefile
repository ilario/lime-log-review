include $(TOPDIR)/rules.mk

PKG_NAME:=remotefilteredlog
PKG_VERSION=$(GIT_COMMIT_DATE)-$(GIT_COMMIT_TSTAMP)
GIT_COMMIT_DATE:=$(shell git log -n 1 --pretty=%ad --date=short . )
GIT_COMMIT_TSTAMP:=$(shell git log -n 1 --pretty=%at . )

include $(INCLUDE_DIR)/package.mk

define Package/$(PKG_NAME)
  SECTION:=utils
  CATEGORY:=Utilities
  TITLE:=$(PKG_NAME) sends logs to a remote rsyslogd-compatible server, but not before applying liblognorm filtering roules.
  MAINTAINER:=Nicolas Pace <nico@libre.ws>
endef

define Package/$(PKG_NAME)/description
    $(PKG_NAME) sends logs to a remote rsyslogd-compatible server, but not before applying liblognorm filtering roules.
endef

define Build/Compile
endef

define Package/$(PKG_NAME)/install
	$(INSTALL_DIR) $(1)/etc/init.d
	$(INSTALL_DIR) $(1)/bin
	$(INSTALL_BIN) ./files/bin/remotefilteredlog $(1)/bin/
	$(INSTALL_BIN) ./files/etc/init.d/remotefilteredlog $(1)/etc/init.d/
endef

$(eval $(call BuildPackage,$(PKG_NAME)))
